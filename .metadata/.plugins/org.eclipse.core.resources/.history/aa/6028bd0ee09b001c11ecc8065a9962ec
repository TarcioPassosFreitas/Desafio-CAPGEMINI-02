package Quest1;

import java.util.Arrays;
import java.util.Scanner;

public class Mediana {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Digite quantos valores deseja na lista:");
		int quantidade = sc.nextInt();
		System.out.println("Digite os números que deseja colocar na lista:");
	
		int[] arrayNumeros = new int[quantidade];
		for(int i = 0; i < quantidade; i++) {
			arrayNumeros[i] = sc.nextInt();
		}
		
		Arrays.sort(arrayNumeros);
		for(int a : arrayNumeros) {
			System.out.println(a);
		}
		
		if((quantidade % 2) == 0 ) {
			System.out.println(arrayNumeros[(quantidade / 2) - 1] + arrayNumeros[quantidade / 2]);
		}else {
			System.out.println(arrayNumeros[(quantidade / 2) + 1]);
		}
		
		sc.close();
	}

}
