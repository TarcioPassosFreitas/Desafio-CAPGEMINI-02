package Quest2;

import java.util.Arrays;
import java.util.Scanner;

/**
 * @author tpfre
 *
 */
public class ElementosPares {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Digite quantos valores deseja na lista: ");
		int quantidade = sc.nextInt();
		System.out.println("Digite um inteiro para comparação: ");
		int x = sc.nextInt();
		int[] vect = new int[quantidade];
		System.out.println("Digite os números que deseja colocar na lista:");
		for(int i = 0; i < quantidade; i++) {
			vect[i] = sc.nextInt();
		}
		
		System.out.println(elementos(vect, x));
		
		
		sc.close();

	}
	
	/**
	 * @param vect array de números desejados
	 * @param x número para comparação
	 * @return cont pares de inteiros que a diferença correponde ao número de comparação
	 */
	public static int elementos(int[] vect, int x) {
		int cont = 0;
		Arrays.sort(vect);
		for(int i = 0; i < vect.length; i++) {
			for(int j = 0; j < vect.length; j++) {
				if(vect[i] - vect[j] == x) {
					cont++;
					
				}
			}
		}
		
		return cont;
	}

}
